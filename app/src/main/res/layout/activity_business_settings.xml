                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp"
                    app:fontFamily="@font/cairo_bold" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
