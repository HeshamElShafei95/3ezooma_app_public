<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.ui.activities.loginSignupPackage.RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <View
        android:id="@+id/toolBarView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/toolbar_dropshadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBarView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/add_npicture"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_owner_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvFirstName"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/txt_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvBusinessName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvEmail"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtBusinessName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_business_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvBusinessName"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_address"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvContactNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvAddress"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_contact_number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvContactNumber"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/labelServices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_services"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvServices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelServices"
                        android:layout_marginTop="@dimen/dimen_5dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMinPersons"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvServices"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtMinPersons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_minimum_persons"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDeliveryDays"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvMinPersons"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtDeliveryDays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/hint_delivery_days"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvTimings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvDeliveryDays"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/labelDeliveryDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_availability_days"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelDeliveryDays"
                        android:layout_marginTop="@dimen/dimen_5dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/labelTimings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rvDays"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="@string/hint_timings"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/lLDeliveryTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelTimings"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvOpenTimings"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_20dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/view_color"
                            app:cardCornerRadius="@dimen/dimen_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/labelOpen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/dimen_2dp"
                                    android:text="@string/hint_open_timing"
                                    android:textColor="@color/dark_gray" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtOpenTimings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/labelOpen"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="@dimen/dimen_2dp"
                                    android:fontFamily="@font/cairo_bold"
                                    android:includeFontPadding="false"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12sp"
                                    app:fontFamily="@font/cairo_bold" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCloseTimings"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_20dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/view_color"
                            app:cardCornerRadius="@dimen/dimen_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/labelClose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/dimen_2dp"
                                    android:text="@string/hint_closing_timing"
                                    android:textColor="@color/dark_gray" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtCloseTimings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/labelClose"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="@dimen/dimen_2dp"
                                    android:fontFamily="@font/cairo_bold"
                                    android:includeFontPadding="false"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12sp"
                                    app:fontFamily="@font/cairo_bold" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvTimings"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/txt_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvPassword"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cvConfirmPassword"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/text_20"
                android:layout_marginRight="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/create_account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp"
                    app:fontFamily="@font/cairo_bold" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAlreadyAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvRegister"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cairo_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/txt_already_have_an_account_log_in"
                android:textColor="@color/black"
                app:fontFamily="@font/cairo_bold" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>